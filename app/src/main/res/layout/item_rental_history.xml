<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#F9F9F9"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Gambar Barang -->
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <!-- Informasi Barang -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Barang: Camera Canon"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/durasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Hari: 5 hari"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tglPengembalian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pengembalian: 2024-12-06"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hargaTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 50.000"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Sedang Disewa"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aksi"
            android:backgroundTint="#008B8B"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
